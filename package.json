{
  "name": "oniguruma-to-js",
  "type": "module",
  "version": "0.3.3",
  "packageManager": "pnpm@9.9.0",
  "description": "Covert Oniguruma-flavor Regexp to JavaScript native RegExp",
  "author": "Anthony Fu <anthonyfu117@hotmail.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/antfu",
  "homepage": "https://github.com/antfu/oniguruma-to-js#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/antfu/oniguruma-to-js.git"
  },
  "bugs": "https://github.com/antfu/oniguruma-to-js/issues",
  "keywords": [
    "oniguruma",
    "regexp",
    "regex"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./textmate": {
      "import": "./dist/textmate.mjs",
      "require": "./dist/textmate.cjs"
    },
    "./detect": {
      "import": "./dist/detect.mjs",
      "require": "./dist/detect.cjs"
    }
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "./textmate": [
        "./dist/textmate.d.ts"
      ],
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "dev": "unbuild --stub",
    "lint": "eslint .",
    "prepublishOnly": "nr build",
    "release": "bumpp && npm publish",
    "start": "esno src/index.ts",
    "test": "vitest --project unit",
    "test:generated": "vitest --project generated",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks && git submodule update --init --recursive"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.2.1",
    "@antfu/ni": "^0.23.0",
    "@antfu/utils": "^0.7.10",
    "@shikijs/core": "^1.16.2",
    "@shikijs/vscode-textmate": "^9.2.0",
    "@types/node": "^22.5.4",
    "bumpp": "^9.5.2",
    "eslint": "^9.9.1",
    "esno": "^4.7.0",
    "fast-glob": "^3.3.2",
    "lint-staged": "^15.2.10",
    "pnpm": "^9.9.0",
    "shiki": "^1.16.2",
    "simple-git-hooks": "^2.11.1",
    "taze": "^0.16.7",
    "typescript": "^5.5.4",
    "unbuild": "^2.0.0",
    "vite": "^5.4.3",
    "vitest": "^2.0.5"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
